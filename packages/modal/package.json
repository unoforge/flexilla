{
  "name": "@flexilla/modal",
  "private": false,
  "version": "2.3.2",
  "type": "module",
  "description": "A customizable modal component for creating interactive pop-up dialogs in web applications.",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/modal.umd.cjs",
  "module": "./dist/modal.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/modal.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/modal.umd.cjs"
      }
    },
    "./modal.css": "./dist/modal.css",
    "./animate.css": "./dist/animate.css"
  },
  "files": [
    "dist",
    "README.md",
    "package.json",
    "!vite.config.ts",
    "!.gitignore",
    "!tsconfig.json"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@flexilla/utilities": "latest",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "keywords": [
    "modal",
    "overlay",
    "dialog",
    "alert-dialog",
    "js",
    "ts",
    "component",
    "interactive",
    "intercative component",
    "flexilla"
  ],
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/unoforge/flexilla"
  },
  "bugs": {
    "url": "https://github.com/unoforge/flexilla/issues"
  },
  "license": "MIT",
  "author": "johnkat-mj",
  "dependencies": {
    "@flexilla/manager": "^0.2.0"
  }
}
