{
  "name": "@flexilla/dropdown",
  "private": false,
  "version": "2.0.31",
  "type": "module",
  "description": "Utilities package for flexilla library",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/dropdown.umd.js",
  "module": "./dist/dropdown.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/dropdown.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/dropdown.umd.js"
      }
    },
    "./dropdown.css": "./dist/dropdown.css"
  },
  "files": [
    "dist",
    "README.md",
    "package.json",
    "!vite.config.ts",
    "!.gitignore",
    "!tsconfig.json",
    "!biome.js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "biome format --write ./src"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.1",
    "@flexilla/utilities": "latest",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.7.0"
  },
  "dependencies": {
    "@flexilla/popover": "latest"
  },
  "keywords": [
    "dropdown",
    "js",
    "ts",
    "component",
    "interactive",
    "intercative component",
    "flexilla"
  ],
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/unoforge/flexilla"
  },
  "bugs": {
    "url": "https://github.com/unoforge/flexilla/issues"
  },
  "license": "MIT",
  "author": "johnkat-mj"
}
