---
import AppLogoLink from "./AppLogoLink.astro";

const footerItems = [
  {
    label: "UnifyUI",
    items: [
      {
        text: "UnifyUI",
        href: "https://uno.unify-ui.dev/",
        isExternal: true,
      },
      {
        text: "UnifyUI VueJS",
        href: "https://github.com/unoforge/",
        isExternal: true,
      },
      {
        text: "Flexiwind",
        href: "https://github.com/unoforge/",
        isExternal: true,
      },
      {
        text: "Flexiwind Laravel",
        href: "https://github.com/unoforge/",
        isExternal: true,
      },
      {
        text: "Flexiwind React",
        href: "https://github.com/unoforge/",
        isExternal: true,
      },
      {
        text: "Flexilla",
        href: "/",
        isExternal: false,
      },
    ],
  },
  {
    label: "Resources",
    items: [
      {
        text: "Licence",
        href: "https://github.com/unoforge/flexilla/blob/main/LICENSE",
        isExternal: true,
      },
      {
        text: "Contributing",
        href: "https://github.com/unoforge/flexilla/blob/main/CONTRIBUTING.MD",
        isExternal: true,
      },
      {
        text: "Contact",
        href: "#link",
        isExternal: true,
      },
    ],
  },
  {
    label: "Community",
    items: [
      {
        text: "Github",
        href: "https://github.com/unoforge/flexilla",
        isExternal: true,
      },
      {
        text: "Discord",
        href: "https://discord.gg/6VN6zTPZAy",
        isExternal: true,
      },
    ],
  },
];

const getSocialIcon = (social:string)=>{
  return (
    social === "Github" ? 'i-carbon-logo-github' :
    social === "Discord" ? 'i-carbon-logo-discord' :
    social === "Twitter" ? 'i-carbon-logo-x' : ""
  )
}
---

<div
  class="p5 sm-p6 md-p8 lg-p10 rd-xl b b-zinc2/90 dark-b-zinc8/40 bg-white dark-bg-zinc950"
>
  <div class="grid grid-cols-2 md-grid-cols-4 gap-x6 gap-y10 md-gap-x10">
    <div class="space-y-6 col-span-2 lg-col-span-1">
      <AppLogoLink showText/>
      <div class="space-y-3">
        
      </div>
    </div>
    {
      footerItems.map((footerItem) =>
        footerItem.label === "Community" ? (
          <div class="space-y-6">
            <h2 class="text-zinc9 dark-text-white font-semibold">
              {footerItem.label}
            </h2>
            <ul class="text-zinc6 dark-text-zinc4 text-sm gap2 lg-gap3 flex flex-wrap lg-flex-col -mx2.5 lg-mx0">
              {footerItem.items.map((item) => (
                <li>
                  <a
                      href={item.href}
                      aria-label={`Link to ${item.text}`}
                      rel="noopener noreferrer"
                      target="_blank"
                      class={
                        `
                        ease-linear duration-200 lg-transition-color hover-text-zinc9 dark-hover-text-zinc1
                        rd-lg lg-rd-0 transition flex hover-bg-zinc2/90 dark-hover-bg-zinc9/90 p2.5 lg-p0 lg-hover-bg-transparent lg-dark-hover-bg-transparent
                        `
                      }
                    >
                      <span class="hidden lg-flex">
                        {item.text}
                        </span>
                        <span aria-hidden="true" class="flex lg-hidden">
                        <span class={`${getSocialIcon(item.text)} flex text-xl`}></span>
                        </span>
                    </a>
                </li>
              ))}
            </ul>
          </div>
        ) : (
          <div class="space-y-6">
            <h2 class="text-zinc9 dark-text-white font-semibold">
              {footerItem.label}
            </h2>
            <ul class="text-zinc6 dark-text-zinc4 text-sm space-y-3">
              {footerItem.items.map((item) => (
                <li>
                  {item.isExternal ? (
                    <a
                      href={item.href}
                      aria-label={`Link to ${item.text}`}
                      rel="noopener noreferrer"
                      target="_blank"
                      class="ease-linear transition-color hover-text-zinc9 dark-hover-text-zinc1"
                    >
                      {item.text}
                    </a>
                  ) : (
                    <a
                      href={item.href}
                      aria-label={`Link to ${item.text}`}
                      class="ease-linear transition-color hover-text-zinc9 dark-hover-text-zinc1"
                    >
                      {item.text}
                    </a>
                  )}
                </li>
              ))}
            </ul>
          </div>
        )
      )
    }
  </div>
  <div
    class="text-center b-t b-t-zinc2/90 dark-b-t-zinc8/60 pt6 mt6 text-zinc6 dark-text-zinc4 text-sm"
  >
    <p>
      &copy; 2023-{new Date().getFullYear()}
      <a
        href="https://unifyui-dev.vercel.app"
        aria-label="Link to UnifyUIDev Website"
        target="_blank"
        class="text-zinc9 dark-text-white font-medium underline underline-offset-4"
        >UnifyUI Dev</a
      >. All rights reserved.
    </p>
  </div>
</div>
