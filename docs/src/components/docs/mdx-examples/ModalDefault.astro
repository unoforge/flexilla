<button data-modal-target="modal-alert1" class="bg-zinc-800 text-white px-4 py-2 rounded-lg text-sm">
    Open Modal
</button>
<dialog data-fx-modal data-modal-demo aria-hidden="true" data-modal-id="modal-alert1"
    data-modal-overlay="ui-overlay bg-zinc-800/70 backdrop-filter backdrop-blur-3xl" 
    class="inset-0 justify-center items-start hidden fx-open:flex p-4 fixed w-screen h-screen top-0 left-0 z90 bg-transparent">
    <div data-modal-content
      class="relative bg-white dark:bg-zinc-950 rounded-lg overflow-hidden w-full max-w-xl p-8 flex flex-col gap-y-4 items-center">
      <div class="w-max p-3 rounded-full bg-red-200 dark-bg-red9/20 text-red-600">
        <span class="flex i-carbon-trash-can text-lg"></span>
      </div>
      <h2 class="font-semibold text-xl text-zinc-900 dark:text-white">
        Confirm your action
      </h2>
      <p class="text-zinc-700 dark:text-zinc-300">
        Are you sure you want to delete this event?
      </p>
      <div class="flex justify-center gap-x-3 pt-4">
        <button data-close-modal
          class="h-9 text-sm flex items-center px-5 rounded-md bg-zinc-100 dark:bg-zinc-900 duration-300 hover:bg-zinc-100/60 dark:hover:bg-zinc-900/60 text-zinc-800 dark:text-zinc-200">
          No, Cancel
        </button>
        <button class="h-9 text-sm flex items-center px-5 rounded-md bg-red-600 duration-200 hover:bg-red-600/80 text-white">
          Yes, Delete
        </button>
      </div>
    </div>
</dialog>