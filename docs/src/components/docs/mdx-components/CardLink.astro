---
interface Props {
  href: string;
}
const { href } = Astro.props;


---

<a
  href={href}
  class="flex flex-col gap4 lg-flex-row items-start gap-x4 ease-linear duration-200
 bg-white dark-bg-zinc950 hover-bg-zinc1/60 dark-hover-bg-zinc9/60
 text-zinc7 dark-text-zinc3 hover-text-zinc9 dark-hover-text-white p4 rd-xl b b b-zinc3/80 dark-b-zinc8/80 hover-b-zinc2/90 dark-hover-b-zinc8/60"
>
  <div class="flex-1">
    <slot />
  </div>
</a>
